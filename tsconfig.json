{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "Node",
    "paths": {
      "~*": ["./*"]
    },
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "vite-plugin-svgr/client"]
  },
  "include": ["src/**/*"]
}
